        android:theme="@style/AppTheme">
        <activity android:name=".UI.Login_Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".UI.MainActivity" />
        <activity android:name=".UI.Register_activity" />
        <activity android:name=".UI.Conversaction_Activity" />
        <activity android:name=".UI.New_Message_Notificate_Activity" />
        <activity android:name=".UI.Setting_In_About_Fragment_Activity" />
        <activity android:name=".UI.Test"/>
    </application>

</manifest>
